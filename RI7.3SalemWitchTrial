<body>

<div id="quiz-container">
    <h1>Interaction Lab: Salem 1692</h1>
    <div id="quiz-content">
        <p class="question" id="question-text">Loading...</p>
        <div id="options"></div>
    </div>
</div>

<div id="feedback-modal">
    <h2 id="feedback-title">Analysis</h2>
    <p id="feedback-text"></p>
    <button class="close-btn" onclick="closeModal()">Continue Investigation</button>
</div>

<script>
    const quizData = [
        {
            q: "The 'Interaction Triangle': How did the lack of scientific knowledge in 1692 interact with the physical symptoms of the young girls?",
            options: [
                "It led the community to seek a supernatural explanation (witchcraft) rather than a medical one.",
                "It caused the town to ignore the girls until they got better.",
                "It forced the girls to admit they were faking their symptoms."
            ],
            correct: 0,
            note: "RI.7.3 Analysis: When an event (symptoms) lacks a known idea (science), a new idea (superstition) fills the gap."
        },
        {
            q: "Ripple Effect: What was the primary interaction between the girls' initial accusations and the existing social tensions in Salem?",
            options: [
                "The town worked together to protect the accused.",
                "People used the accusations to settle old grudges over land and family disputes.",
                "The court dismissed the girls' claims immediately."
            ],
            correct: 1,
            note: "The 'Ripple' shows how a small event (accusation) interacts with a long-standing idea (grudges) to create a massive crisis."
        },
        {
            q: "Interactions of Power: How did the courtâ€™s decision to allow 'spectral evidence' change the power dynamic between the accusers and the accused?",
            options: [
                "It gave the accused a way to prove their innocence through dreams.",
                "It gave the accusers absolute power, as spectral evidence is impossible to disprove.",
                "It balanced the power so both sides had an equal chance."
            ],
            correct: 1,
            note: "RI.7.3: This idea (spectral evidence) interacted with the legal event (the trial) to make justice impossible."
        }
        // ... more questions can be added here
    ];

    let current = 0;
    function load() {
        const d = quizData[current];
        document.getElementById("question-text").innerText = d.q;
        const container = document.getElementById("options");
        container.innerHTML = "";
        d.options.forEach((o, i) => {
            const b = document.createElement("button");
            b.className = "option-btn";
            b.innerText = o;
            b.onclick = () => {
                document.getElementById("feedback-text").innerText = d.note;
                document.getElementById("feedback-modal").style.display = "block";
            };
            container.appendChild(b);
        });
    }

    function closeModal() {
        document.getElementById("feedback-modal").style.display = "none";
        current++;
        if(current < quizData.length) load();
        else document.getElementById("quiz-content").innerHTML = "<h2>Investigation Complete. Your evidence has been recorded.</h2>";
    }
    load();
</script>
</body>
